@using CarRental.Infrastructure.Extensions
@using CarRental.Services.Cars.Models
@model IEnumerable<CarServiceModel>

<div class="custom-row">
    @foreach (var car in Model)
    {
        <div class="custom-col">
            <div class="custom-card">
                <img class="custom-img" src="@car.ImageUrl" alt="@car.Brand @car.Model - @car.Year (@car.CategoryName)">
                <div class="custom-card-body">
                    <h5 class="custom-card-title">@car.Year @car.Brand @car.Model (@car.CategoryName)</h5>
                    <div class="custom-btn-container">
                        <a asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" asp-route-information="@car.GetInformation()" class="custom-btn">View</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

<style>
    .custom-row {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
    }

    .custom-col {
        flex: 0 0 calc(33.333% - 20px); /* Adjust as needed */
        margin: 10px;
    }

    .custom-card {
        border: 1px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        transition: box-shadow 0.3s ease;
    }

    .custom-card:hover {
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }

    .custom-img {
        width: 100%;
        height: 200px; /* Adjust as needed */
        object-fit: cover;
    }

    .custom-card-body {
        padding: 20px;
    }

    .custom-card-title {
        font-size: 18px;
        margin-bottom: 10px;
        text-align: center;
    }

    .custom-btn-container {
        display: flex;
        justify-content: center;
    }

    .custom-btn {
        padding: 10px 20px;
        margin-top: 10px;
        background-color: #007bff;
        border: none;
        color: white;
        text-decoration: none;
        border-radius: 4px;
        cursor: pointer;
        transition: background-color 0.3s;
    }

    .custom-btn:hover {
        background-color: #0056b3;
    }
</style>
