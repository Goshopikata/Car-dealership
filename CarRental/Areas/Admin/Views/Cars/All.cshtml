@using CarRental.Infrastructure.Extensions
@using CarRental.Services.Cars.Models
@model IEnumerable<CarServiceModel>

@{
    ViewBag.Title = "Car Management";
}

<h1 style="color: #007bff;">Car List</h1>

<div style="overflow-x: auto;">
    <table class="custom-table">
        <thead class="custom-header">
            <tr>
                <th>ID</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Year</th>
                <th>Category</th>
                <th>Approved</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var car in Model)
            {
                <tr>
                    <td>@car.Id</td>
                    <td>@car.Brand</td>
                    <td>@car.Model</td>
                    <td>@car.Year</td>
                    <td>@car.CategoryName</td>
                    <td>@(car.IsPublic ? "Yes" : "No")</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Cars" asp-action="ChangeVisibility" asp-route-id="@car.Id" class="custom-btn">@((car.IsPublic) ? "Hide" : "Show")</a>
                        <a asp-area="" asp-controller="Cars" asp-action="Details" asp-route-id="@car.Id" asp-route-information="@car.GetInformation()" class="custom-btn">View</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<style>
    .custom-table {
        width: 100%;
        border-collapse: collapse;
        border: 1px solid #ddd;
        font-size: 14px;
    }

    .custom-table th,
    .custom-table td {
        border: 1px solid #ddd;
        padding: 8px;
        text-align: left;
    }

    .custom-header {
        background-color: #f2f2f2;
        color: #333;
    }

    .custom-btn {
        padding: 6px 12px;
        background-color: #007bff;
        border: none;
        color: #fff;
        text-align: center;
        text-decoration: none;
        display: inline-block;
        font-size: 14px;
        cursor: pointer;
        border-radius: 4px;
        transition: background-color 0.3s;
    }

    .custom-btn:hover {
        background-color: #0056b3;
    }
</style>
